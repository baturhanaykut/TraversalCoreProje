@model CreateDestinationCommand
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Tur Rotası Ekleme Sayfası(CQRS)</h1>

<form method="post">
    <label asp-for="City">Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label asp-for="DayNight">Gün - Gece</label>
    <input type="text" asp-for="DayNight" class="form-control" />
    <br />
    <label asp-for="Price">Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label asp-for="Capacity">Kapasite</label>
    <input type="text" asp-for="Capacity" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">Yeni Lokasyon Bilgisi Ekle</button>

</form>